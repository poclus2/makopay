# Environment
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET="secret"
JWT_EXPIRATION="15m"
JWT_REFRESH_SECRET="refresh_secret"
JWT_REFRESH_EXPIRATION="7d"

# Payment Mode
PAYMENT_MODE=SANDBOX

# Object Storage (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio_user
S3_SECRET_KEY=minio_password
S3_BUCKET=makopay-docs
S3_REGION=us-east-1

# MLM Config
MLM_MAX_LEVELS=3
MLM_PERCENTAGE_LEVEL_1=5
MLM_PERCENTAGE_LEVEL_2=3
MLM_PERCENTAGE_LEVEL_3=2

# Email (Resend)
RESEND_API_KEY=re_your_api_key
RESEND_FROM_EMAIL=noreply@makopay.live
RESEND_FROM_NAME=Makopay

# SMS (Nexah) - Cost: 11 XAF/SMS
NEXAH_API_URL=https://api.nexah.net/v1
NEXAH_API_KEY=your_nexah_api_key
NEXAH_SENDER_ID=MAKOPAY

# Notifications (Infobip - legacy)
INFOBIP_API_KEY=your_api_key
INFOBIP_BASE_URL=https://api.infobip.com
INFOBIP_SENDER_ID=CONFIRM

# Marketing Webhooks
WEBHOOK_SECRET=random_secret_for_signature_validation
